@model Editor_1._0.ViewModels.LoginModel

<h4>Вход</h4>
<hr />
<div id="to_register">Зарегистрироваться</div>
<div class="col-md-4">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Mail" class="control-label"></label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input hidden type="text" name="sent_from" value="@ViewBag.curPage" />
        <div class="form-group">
            <input type="submit" value="Войти" class="confirm-btn" />
        </div>
    </form>
</div>



